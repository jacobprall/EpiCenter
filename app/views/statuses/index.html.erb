<h1>Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Last tested</th>
      <th>Date,</th>
      <th>Last test result</th>
      <th>Integer,</th>
      <th>Curr status</th>
      <th>Integer,</th>
      <th>Curr health</th>
      <th>Integer,</th>
      <th>Next test</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.last_tested %></td>
        <td><%= status.date, %></td>
        <td><%= status.last_test_result %></td>
        <td><%= status.integer, %></td>
        <td><%= status.curr_status %></td>
        <td><%= status.integer, %></td>
        <td><%= status.curr_health %></td>
        <td><%= status.integer, %></td>
        <td><%= status.next_test %></td>
        <td><%= status.date %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

